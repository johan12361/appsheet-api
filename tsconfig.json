{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "allowJs": false,
    "resolveJsonModule": true,

    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,

    "outDir": "dist",
    "rootDir": ".",
    "noEmit": false
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src"]
}
