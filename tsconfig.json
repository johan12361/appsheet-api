{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,

    "allowJs": false,
    "resolveJsonModule": true,

    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,

    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "playground"]
}
